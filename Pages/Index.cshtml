@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<body>


    <div class="container">
        <div class="row">
            <div class="col table-responsive">
                <table class="table table-hover text-center" id="mainTable">
                    <div class="col">
                        <thead class="bg-dark text-white">
                            <tr>
                                <th scope="col" class="col-2">Pair</th>
                                <th scope="col">Only sell</th>
                                <th scope="col" class="col-2">Strategy</th>
                                <th scope="col" class="col-1">TF</th>
                                <th scope="col" class="col-1">Param</th>
                                <th scope="col" class="col-1">Take-profit %</th>
                                <th scope="col" class="col-1">Value</th>
                                <th scope="col" class="col-1">Add purch.%</th>
                                <th scope="col" class="col-1">Number of purch</th>
                                <th scope="col" class="col-1">Martins coef.</th>
                                <th scope="col" class="col-1">SL %</th>
                                <th ></th>

                            </tr>
                        </thead>
                    </div>
                    <tbody>
                        <tr id="row1">
                            <td class="text-center"><input type="text" size="" value="LTCUSTD"
                                    class="form-control text-center mt-1" id="pair1"></td>
                            <td class="text-center form-switch"><input class="form-check-input mx-auto butMid" type="checkbox"
                                    id="onlySell1"></td>
                            <td class="text-center">
                                <select class="form-control" id="strat1">
                                    <option>market price</option>
                                    <option>before param</option>
                                    <option>before MA</option>
                                </select>
                            </td>
                            <td class="text-center">
                                <select class="form-control text-center" id="TF1">
                                    <option>1m</option>
                                    <option>3m</option>
                                    <option>5m</option>
                                    <option>15m</option>
                                    <option>30m</option>
                                    <option>1h</option>
                                    <option>2h</option>
                                    <option>4h</option>
                                    <option>6h</option>
                                    <option>8h</option>
                                    <option>12h</option>
                                    <option>1d</option>
                                    <option>3d</option>
                                    <option>1w</option>
                                    <option>1M</option>
                                </select>
                            </td>
                            <td class="text-center"><input type="text" size="1" value="7"
                                    class="form-control  text-center " id="param1"></td>

                            <td class="text-center"><input type="text" size="1" value="0.7"
                                    class="form-control text-center " id="take1"></td>

                            <td class="text-center"><input type="text" size="1" value="11"
                                    class="form-control text-center " id="value1"></td>

                            <td class="text-center"><input type="text" size="1" value="2.5"
                                    class="form-control text-center " id="pursh1"></td>

                            <td class="text-center"><input type="text" size="1" value="5"
                                    class="form-control text-center " id="numPursh1"></td>
                            <td class="text-center"><input type="text" size="1" value="1.25"
                                    class="form-control text-center " id="martin1"></td>
                            <td class="text-center"><input type="text" size="1" value="0"
                                    class="form-control text-center " id="SL1"></td>
                            <td ><button type="button" class="btn-close butMid closeButton" onclick="delRow(this.id)" id="close1" aria-label="Close"></button></td>

                        </tr>
                    </tbody>
                </table>
                <button class="btn btn-primary" id="addRow">Add row</button>
            </div>
            <div class="col-2">
                <div class="form-group">
                    <label for="exampleFormControlTextarea1" class="mb-1">Balances</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>
                <div class="form-group mt-3 mb-1">
                    <label for="exampleFormControlTextarea1" class="mb-1">Opened positions</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>
            </div>
        </div>
    </div>
</body>